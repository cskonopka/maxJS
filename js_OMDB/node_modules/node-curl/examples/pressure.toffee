Curl   = require '../index'
assert = require 'assert'
j = 0;
do next = ->
  console.info "curl instances: ", Curl.get_count()
  setTimeout next, 1000

for i in [1..100]
  do ->
    curl = Curl.create()
    do once = ->
      err, res = curl! 'localhost/test.html'
      assert.equal res.body.length, 1468
      if ++j % 100 == 0
        console.info j
      if j < 500000
        once()
      # res.close()
