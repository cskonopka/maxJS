curl   = require '../index'

curl.setOptions({
  URL:  'www.yahoo.com'
});

curl_ = curl.curl_
curl_.on_write = (chunk) ->
  console.info chunk.length
  chunk.length

curl_.on_error = (err) ->
  console.info err

curl_.on_end = ->
  console.info 'done.'
  console.info 'status:', @getinfo('RESPONSE_CODE')
  console.info 'effective url:', @getinfo('EFFECTIVE_URL')

curl_.perform()
